<h3><%= @project.title %></h3>
<ul class="nav nav-tabs" style="margin-bottom: 10px">
  <li><a href="#hosts" data-toggle="tab">Hosts</a></li>
  <li><a href="#check-history" data-toggle="tab">Check History</a></li>
  <li><a href="#scripts" data-toggle="tab">Scripts</a></li>
</ul>

<div class="tab-content">
  <div class="tab-pane" id="check-history">
    Check History Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam erat volutpat.
    <table class="table table-condensed">
      <thead>
        <tr>
          <th>Date</th>
          <th>Host</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td></td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="tab-pane" id="hosts">
    <ul class="list-group">
      <% @project.hosts.each do |host| %>
      <li class="list-group-item">
          <%= host.name %> - <%= host.address %>
          <% if host.auto %>
            <span class="label label-info">auto</span>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="tab-pane" id="scripts">
    <ul class="list-group">
      <li class="list-group-item">Script 1</li>
      <li class="list-group-item">Script 2</li>
    </ul>
  </div>
</div>
